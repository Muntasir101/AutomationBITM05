<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Login">

    <test name="Login Functional Test in Edge">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="com.CrossBrowser.CB_LoginTest"></class>
        </classes>
    </test>

    <test name="Login Functional Test in Chrome">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="com.CrossBrowser.CB_LoginTest"></class>
        </classes>
    </test>

    <test name="Login Functional Test in Firefox">
        <parameter name="browser" value="Firefox"></parameter>
        <classes>
            <class name="com.CrossBrowser.CB_LoginTest"></class>
        </classes>
    </test>

</suite>